<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./init.php">
    <testsuites>
        <testsuite name="Rabbit CMS Test Suite">
            <directory>./application/Module/*</directory>
        </testsuite>
    </testsuites>
</phpunit>